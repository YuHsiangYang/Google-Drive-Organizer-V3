<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Google_Drive_Organizer_V3.Controls.SortController"
             xmlns:Controls="clr-namespace:Google_Drive_Organizer_V3.Controls" x:Class="Google_Drive_Organizer_V3.Controls.SortController.MainSortController"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/ApplicationResources.xaml"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="SortTypeController" Width="auto" Style="{DynamicResource CustoCombobox}" HorizontalAlignment="Stretch" Background="{Binding Mode=OneWay, Source={StaticResource ColorTertiary}}" BorderBrush="Black" Foreground="Black"/>
        <Controls:SortMannerControl x:Name="SortMannerController" Grid.Column="1" Margin="5,0,5,0"/>
    </Grid>
</UserControl>
