<UserControl x:Name="ProgressBar_Main" x:Class="Google_Drive_Organizer_V3.Pages.ProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Google_Drive_Organizer_V3.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="500" SizeChanged="ProgressBar_Main_SizeChanged" Loaded="ProgressBar_Main_Loaded">
    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/ColorPalettle.xaml"/>
    </UserControl.Resources>
    <Grid>
        <Rectangle Name="Background_Rec" RadiusX="10.5" RadiusY="{Binding ElementName=Background_Rec, Path=RadiusX}" Fill="{StaticResource ColorTertiary}" HorizontalAlignment="Left" Width="{Binding ElementName=Background_Rec, Path=RenderSize.Width}"/>
        <Rectangle Name="ProgressBar_Rec" RadiusX="{Binding ElementName=Background_Rec, Path=RadiusX}" RadiusY="{Binding ElementName=Background_Rec, Path=RadiusX}" Fill="{StaticResource GreenPrimary}" HorizontalAlignment="Left"/>
        <Viewbox>
            <Label Name="Percentage_Label" Content="0%" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50"></Label>
        </Viewbox>
    </Grid>
</UserControl>
