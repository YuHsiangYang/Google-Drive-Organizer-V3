    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    xmlns:theme="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2" xmlns:Pages="clr-namespace:Google_Drive_Organizer_V3.Pages" x:Name="UserControl_Main" x:Class="Google_Drive_Organizer_V3.Pages.MatchItem.MatchItem_Container"
             mc:Ignorable="d" 
             d:DesignHeight="458.182" d:DesignWidth="1118.182" Background="White" Loaded="UserControl_Main_Loaded"
    >
    <UserControl.Resources>
        <ResourceDictionary Source="\ApplicationResources.xaml"/>
    </UserControl.Resources>
    <Grid Margin="20">

