                        <!--<Controls:Search_By_FileName/>-->
                        <!--<Button Content="搜尋" Cursor="Hand" x:Name="Search" Margin="10, 0, 0, 0" Click="Search_Click" VerticalAlignment="Center" Grid.Column="1" Height="24" Template="{StaticResource CustomButtonTemplate}" Width="52" BorderBrush="{x:Null}" extension:ButtonCustomProperties.CornerRadius="4" Padding="4"/>-->
                    </StackPanel>
                </Grid>
                <!--<StackPanel Orientation="Horizontal" Name="Search_Date_StackPanel">
                        -->
                <!--<ComboBox HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Center" Width="68" x:Name="Search_Input_Year"/>
                        <ComboBox HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Center" Width="68" x:Name="Search_Input_Month"/>
                        <ComboBox HorizontalAlignment="Left" Margin="5,5,0,0" VerticalAlignment="Center" Width="68" x:Name="Search_Input_Day"/>-->
                <!--
                    </StackPanel>-->

                <!--</StackPanel>-->
            </ScrollViewer>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"  Grid.Column="2" Height="34">
                <ComboBox HorizontalAlignment="Left" VerticalAlignment="Center" Width="84" x:Name="Sort_Type" Margin="0,0,10,0"/>
                <ComboBox  HorizontalAlignment="Left" VerticalAlignment="Center" Width="84" x:Name="Sort_Manner" Margin="0,0,10,0"/>
                <!--<StackPanel HorizontalAlignment="Right" Margin="10,0,0,0" VerticalAlignment="Center" Orientation="Horizontal">
