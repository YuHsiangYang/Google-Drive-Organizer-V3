                    <Controls:CircleSwitch Height="35" Width="62" x:Name="Expand_Collaps" On_Status_Changed="Expand_Collaps_On_Status_Changed"/>
                </StackPanel>-->
            </StackPanel>
        </Grid>
        
        <Pages:ProgressBar Grid.Row="1" VerticalAlignment="Center" x:Name="MatchingProgress" Height="20" Grid.ColumnSpan="2"/>
        <Button x:Name="Previous_Step" Content="上一步" HorizontalAlignment="Left" Margin="16,11,0,4" Grid.Row="5" Click="Previous_Step_Click" Width="74" BorderBrush="{x:Null}" Background="#FFFF9F9F" extension:ButtonCustomProperties.CornerRadius="7" FontSize="15"/>
        <Button x:Name="Next_Step_BTN" Content="下一步" HorizontalAlignment="right" Margin="16,11,0,4" Grid.Row="5" Click="Next_Step_Click" Width="74" BorderBrush="{x:Null}" Background="#ade8f4" extension:ButtonCustomProperties.CornerRadius="7" FontSize="15"/>
        <Controls:DisplayRange HorizontalAlignment="Stretch" x:Name="Pages" Margin="0" Grid.Row="4" VerticalAlignment="Stretch"/>
